<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/display_layoutId"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    app:cardCornerRadius="8dp"
    android:background="#FF50DEAE"
    android:backgroundTint="#fff">

    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF50DEAE">

        <TextView
            android:id="@+id/display_userId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text=""
            android:textColor="#000" />

        <TextView
            android:id="@+id/display_userNameId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/display_userId"
            android:layout_marginStart="44dp"
            android:text="UserName"
            android:textColor="#000" />

        <TextView
            android:id="@+id/display_userEmailId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/display_userNameId"
            android:layout_marginTop="84dp"
            android:text="UserEmail"
            android:textColor="#000" />


    </RelativeLayout>

</android.support.v7.widget.CardView>